<?xml version="1.0"?>

<launch>

    <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan">
        <remap from="cloud_in" to="velodyne_points"/>
        <remap from="scan" to="scan"/>

        <param name="max_height" value="0.1"/>
        <param name="min_height" value="-0.05"/>

        <param name="range_max" value="4.0" />
        <param name="range_min" value="0.15" />

    </node>

    <node pkg="tf"
          type="static_transform_publisher"
          name="velodyne_to_base_link"
          args="0 0 0 -1.57079632679 0 0 /velodyne /base_link  100"/>

</launch>
